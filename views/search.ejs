<%- include("partials/header.ejs") %>

<h1 class="page-title">Search Books</h1>
<p style="text-align:center; margin-bottom:30px; color:#6b7280;">
  Discover new books from Open Library and save them to your collection.
</p>


<form action="/search" method="post" class="search-box">
  <input type="text" name="query" placeholder="Search any book..." class="input">
  <button class="btn">Search</button>
</form>

<% if(results) { %>
  <div class="books-grid">
    <% results.forEach(book => { %>
      <div class="book-card">

        <% if(book.cover_id) { %>
          <img 
            src="https://covers.openlibrary.org/b/id/<%= book.cover_id %>-M.jpg"
            class="book-cover"
          />
        <% } else { %>
          <div class="no-cover">No Cover</div>
        <% } %>

        <h3><%= book.title %></h3>
        <p class="author"><%= book.author %></p>

        <form action="/add" method="post">
          <input type="hidden" name="title" value="<%= book.title %>">
          <input type="hidden" name="author" value="<%= book.author %>">
          <input type="hidden" name="cover_id" value="<%= book.cover_id %>">

          <button class="btn">Add</button>
        </form>

      </div>
    <% }) %>
  </div>
<% } %>

<script>
async function addBook(e) {
  e.preventDefault();
  const token = localStorage.getItem('token'); // store token after login
  const title = document.querySelector('#title').value;
  const author = document.querySelector('#author').value;
  const cover_id = document.querySelector('#cover_id').value;

  const res = await fetch('/add', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': 'Bearer ' + token
    },
    body: JSON.stringify({ title, author, cover_id })
  });

  if(res.ok) window.location.reload();
}
</script>

